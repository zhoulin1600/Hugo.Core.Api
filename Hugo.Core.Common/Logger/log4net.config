	<!--控制台日志附加介质-->
	<appender name="ConsoleAppender" type="log4net.Appender.ManagedColoredConsoleAppender">
		<mapping>
			<level value="DEBUG" />
			<foreColor value="White" />
		</mapping>
		<mapping>
			<level value="INFO" />
			<foreColor value="Green" />
		</mapping>
		<mapping>
			<level value="WARN" />
			<foreColor value="Yellow" />
		</mapping>
		<mapping>
			<level value="ERROR" />
			<foreColor value="Red" />
		</mapping>
		<mapping>
			<level value="FATAL" />
			<foreColor value="Cyan" />
		</mapping>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
					   %newline【日志级别】：%-5level [%thread]
					   %newline【记录时间】：%date [%timestamp]毫秒
					   %newline【输出位置】：%logger
					   %newline【输出描述】：%message%newline%exception%newline"  />
		</layout>
	</appender>
	
	<!--信息日志附加介质-->
	<appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
		<!--防止多线程时不能写Log,官方说线程非安全-->
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<!--UTF-8编码格式，解决中文字符乱码-->
		<encoding value="utf-8" />
		<!--日志文件路径-->
		<file value="..\\Logs\\" />
		<!--日志文件名格式为：2008-08-31.log-->
		<datePattern value="yyyy-MM-dd.'log'" />
		<!--日志文件名是否是固定不变的-->
		<staticLogFileName value="false" />
		<!--是否是向文件中追加日志-->
		<appendToFile value="true" />
		<!--日志文件创建方式（[Once]启动，[Size]大小，[Date]日期，[Composite]混合Size和Date）-->
		<rollingStyle value="Composite" />
		<!--日志文件保留最新数量（-1不限）-->
		<maxSizeRollBackups value="100" />
		<!--日志文件最大容量，可用的单位:KB|MB|GB-->
		<maximumFileSize value="10MB" />
		<!--输出级别在INFO和ERROR之间的日志-->
		<!--过滤级别 OFF > FATAL > ERROR > WARN > INFO > DEBUG > ALL-->
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="INFO" />
			<levelMax value="WARN" />
		</filter>
		<!--信息日志布局-->
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%newline＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
					   %newline【日志级别】：%-5level [%thread]
					   %newline【记录时间】：%date [%timestamp]毫秒
					   %newline【信息位置】：%logger
					   %newline【信息描述】：%message%newline"  />
		</layout>
	</appender>
	
	<!--错误日志附加介质-->
	<appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
		<!--防止多线程时不能写Log,官方说线程非安全-->
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<!--UTF-8编码格式，解决中文字符乱码-->
		<encoding value="utf-8" />
		<!--日志文件路径-->
		<file value="..\\Logs\\" />
		<!--日志文件名格式为：2008-08-31.log-->
		<datePattern value="yyyy-MM-dd.'log'" />
		<!--日志文件名是否是固定不变的-->
		<staticLogFileName value="false" />
		<!--是否是向文件中追加日志-->
		<appendToFile value="true" />
		<!--日志文件创建方式（[Once]启动，[Size]大小，[Date]日期，[Composite]混合Size和Date）-->
		<rollingStyle value="Composite" />
		<!--日志文件保留最新数量（-1不限）-->
		<maxSizeRollBackups value="100" />
		<!--日志文件最大容量，可用的单位:KB|MB|GB-->
		<maximumFileSize value="10MB" />
		<!--输出级别在INFO和ERROR之间的日志-->
		<!--过滤级别 OFF > FATAL > ERROR > WARN > INFO > DEBUG > ALL-->
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="ERROR" />
			<levelMax value="FATAL" />
		</filter>
		<!--信息日志布局-->
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%newline＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
					   %newline【日志级别】：%-5level [%thread]
					   %newline【记录时间】：%date [%timestamp]毫秒
					   %newline【错误位置】：%logger
					   %newline【错误描述】：%message
					   %newline【错误详情】：" />
		</layout>
	</appender>
	
	<!--日志输出控制-->
	<root>
		<!--控制级别，由低到高：ALL|DEBUG|INFO|WARN|ERROR|FATAL|OFF-->
		<level value="ALL" />
		<!--<appender-ref ref="TraceAppender" />-->
		<appender-ref ref="ConsoleAppender" />
		<appender-ref ref="InfoAppender" />
		<appender-ref ref="ErrorAppender" />
	</root>
	
</log4net>